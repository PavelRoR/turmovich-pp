#lets
	.container
		position relative
.lets-bg
	position absolute
	width auto
	top 0
	left 15px
	height: 100%
	@media screen and (min-width 2295px)
		width 100%
		left 0
		right 0
		margin 0 auto
	@media screen and (max-width 1199px)
		left 0
.content-lets
	padding 90px 0 90px 35px
	@media screen and (max-width 991px)
		padding 90px 0 90px 35px
	@media screen and (max-width 560px)
		padding 60px 0 60px 25px
	@media screen and (max-width 386px)
		padding 40px 0 40px 0
.general-img-lets
	img
		bottom: -90px
		right 0
.lets-img
	position absolute
	right 0
	bottom: 0
	@media screen and (max-width 991px)
		position: relative
		right 0
		z-index 10
		display block
		margin 50px auto 0
		width 100%
		max-width 350px
.button-lets
	margin-top: 60px
	@media screen and (max-width 991px)
		margin-top: 20px