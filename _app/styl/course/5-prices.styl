#prices
	padding 90px 0
.packet
	width 100%
	max-width 600px
	margin 0 auto 70px
	position relative
	min-height 890px
	&-head
		&-title
			font-size: 36px
			font-weight: bold
			color #EBFA40
			text-align center
			small
				display block
				font-size: 16px
				font-weight: 100
				color #fff
				margin-bottom: 10px
	&-body
		padding 30px 0 20px
		&-text
			font-size: 20px
			font-weight: bold
			text-align center
			margin-bottom: 20px
			color #fff
		&-list
			color #fff
			list-style none
			li
				margin-bottom: 10px
				padding-left: 15px
				position relative
				span
					font-weight: bold
				&:before
					content: ''
					display block
					position absolute
					width 10px
					height: 2px
					background-color #F530EB
					top 13px
					left 0
	&-footer
		position relative
		text-align center
		position absolute
		bottom: 45px
		left 0
		right 0
.cost
	font-size: 38px
	text-transform uppercase
	margin-bottom: 40px
	color #fff
	line-height: 50px
	span
		display block
		font-size: 48px
		font-weight: 900
.prepayment
	text-align center
	&-title
		font-size: 48px
		font-weight: 900
		text-transform uppercase
		color red
		line-height: 50px
	&-text
		font-size: 22px
		margin 20px 0 30px
		span
			display inline-block
			font-weight: bold