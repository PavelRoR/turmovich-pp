#record
	padding 90px 0
	background-color: #E0E5E2
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 560px)
		padding 40px 0
.record
	width 100%
	max-width 650px
	margin 0 auto 40px
	@media screen and (max-width 560px)
		margin-bottom: 20px
	&-title
		font-size: 20px
		font-weight: bold
		margin-bottom: 10px
		text-align center
	&-text
		margin-top: 10px